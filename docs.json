{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "aspen",
  "name": "Laudos.AI",
  "search": {
    "prompt": "Buscar na documentação..."
  },
  "colors": {
    "primary": "#1a1a1a",
    "light": "#f97316",
    "dark": "#000000",
    "background": {
      "light": "#ffffff",
      "dark": "#0a0a0a"
    }
  },
  "favicon": "/favicon.png",
  "navigation": {
    "tabs": [
      {
        "tab": "Manual",
        "groups": [
          {
            "group": "Início",
            "pages": ["index", "quickstart", "autenticacao"]
          },
          {
            "group": "Editor",
            "pages": ["laudos/editor", "laudos/ditado-voz", "laudos/atalhos"]
          },
          {
            "group": "Biblioteca",
            "pages": ["biblioteca/laudos", "biblioteca/modelos"]
          },
          {
            "group": "Monitoramento",
            "pages": [
              "monitoramento/achados-criticos",
              "monitoramento/dashboard"
            ]
          },
          {
            "group": "Configurações",
            "pages": [
              "configuracoes/frases-prontas",
              "configuracoes/preferencias",
              "configuracoes/planos"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Acessar Plataforma",
          "href": "https://copilot.laudos.ai",
          "icon": "arrow-up-right-from-square"
        },
        {
          "anchor": "Suporte",
          "href": "mailto:oi@laudos.ai",
          "icon": "headset"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/dark.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Suporte",
        "href": "mailto:oi@laudos.ai"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Acessar",
      "href": "https://copilot.laudos.ai"
    }
  },
  "footer": {
    "socials": {
      "linkedin": "https://linkedin.com/company/laudosai"
    }
  }
}
